@{
    ViewData["Title"] = "Home Page";
    ViewData["Username"] = @ViewBag.Username;
}

<h1>List all posts</h1>

<ul>
    @foreach (var post in ViewBag.Posts)
    {
        <p><a href="~/Post/Read/@post.id">@post.content</a></p>
        <p><a href="~/Post/Read/@post.id">Posted by @post.username</a></p>
        <br>
    }
    
</ul>